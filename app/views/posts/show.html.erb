<p id="notice"><%= notice %></p>

<p>
  <b>Title:</b>
  <%= @post.title %>
</p>

<p>
  <b>Body:</b>
  <%= @post.body %>
</p>

<p>
  <b>User:</b>
  <%= @post.user.name %>
</p>


<hr>
<%= simple_form_for @comment do |f| %>
    <%= f.input :body, label: "New Comment", input_html: {style: "height: 60px;"} %>
    <%= f.input :post_id, as: :hidden, input_html: {value: @post.id} %>
    <%= f.input :user_id, as: :hidden, input_html: {value: @post.user_id} %>
    <%= f.submit %>

<% end %>

<ul>
  <% @post.comments.each do |comment| %>
    <li>Comment by: <%= %> <%= comment.body %></li>
  <% end %>
</ul>


<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>
